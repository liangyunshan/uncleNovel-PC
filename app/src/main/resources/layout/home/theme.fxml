<?import com.unclezs.novel.app.framework.components.icon.IconButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<JFXPopup xmlns:fx="http://javafx.com/fxml" xmlns="https://javafx.com/javafx" fx:controller="com.unclezs.novel.app.main.views.home.ThemeView">
  <VBox spacing="10" styleClass="home-theme-popup" fx:id="box">
    <HBox styleClass="theme-popup-color-box">
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,default" userData="default"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,dark" userData="dark"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,green" userData="green"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,red" userData="red"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,blue" userData="blue"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,pink" userData="pink"/>
    </HBox>
    <HBox styleClass="theme-popup-color-box">
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,purple" userData="purple"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,deep-blue" userData="deep-blue"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,light-blue" userData="light-blue"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,teal" userData="teal"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,orange" userData="orange"/>
      <IconButton onMouseClicked="#changeTheme" styleClass="color-box-item,grey" userData="grey"/>
    </HBox>
  </VBox>
</JFXPopup>
